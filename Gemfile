source 'https://rubygems.org'

# Browser DSL
gem 'capybara'
# Connect to firefox
gem 'selenium-webdriver'
# Environment setup
gem 'dotenv'
# Color output
gem 'rainbow'
# Option parser
gem 'slop', '~> 4.2'

group :development, :test do
  # Open files with external apps
  gem 'launchy'
  # To debug
  gem 'pry', github: 'pry/pry'
end
